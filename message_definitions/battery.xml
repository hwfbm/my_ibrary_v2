<?xml version="1.0"?>
<mavlink>
  <include>common.xml</include>

  <messages>
    <!-- Hydrogen battery data from the flight controller -->
    <message id="53300" name="HYDROGEN_BATTERY">
      <description>Hydrogen battery data from the flight controller.</description>
      <field type="uint16_t" name="bat_voltage">Battery voltage (mV)</field>
      <field type="uint16_t" name="servo_current">Servo current (mA)</field>
      <field type="uint16_t" name="stack_voltage">Stack voltage (mV)</field>
      <field type="uint16_t" name="servo_voltage">Servo voltage (mV)</field>
      <field type="uint16_t" name="bat_refuel_current">Battery refuel current (mA)</field>
      <field type="uint16_t" name="gas_tank_pressure">Gas tank pressure (Pa)</field>
      <field type="uint16_t" name="pipe_pressure">Pipe pressure (Pa)</field>
      <field type="int8_t" name="pcb_temp">PCB temperature (C)</field>
      <field type="int8_t" name="stack_temp">Stack temperature (C)</field>
      <field type="uint8_t" name="work_status">Work status</field>
      <field type="uint8_t" name="fault_status">Fault status</field>
      <field type="uint8_t" name="self_check">Self-check result (0=fail, 1=pass)</field>
      <field type="uint8_t" name="id">0 or 1</field>
    </message>
  </messages>
</mavlink>
